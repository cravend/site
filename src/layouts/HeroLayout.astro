---
import TranslationMenu from "../components/TranslationMenu.astro";
import BaseLayout from "./BaseLayout.astro";
import { t } from "astro-i18n";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <header class="bg-[#E56106] text-white">
    <div class="container mx-auto p-4">
      <a
        href="#main"
        class="transition left-0 top-0 absolute p-3 m-3 -translate-y-16 focus:translate-y-0"
      >
        {t("header.skip")}
      </a>
      <h1 class="font-bold text-6xl">{t("header.name")}</h1>
      <TranslationMenu />
    </div>
  </header>
  <hr class="hidden" />
  <main id="main" class="container mx-auto p-4 flex-1 space-y-4">
    <slot />
  </main>
  <footer class="p-4 text-center bg-[#E56106] text-white">
    <p>{t("footer.content")}</p>
  </footer>
</BaseLayout>
