---
const { subtitle } = Astro.props;
---

<li class="border-primary relative ml-4 border-l-2 pl-8">
  <div class="bg-primary absolute top-[6px] -left-[9px] h-4 w-4 rounded-full">
  </div>
  <h3 class="text-xl font-bold">
    <slot name="title" />
  </h3>
  <p class="text-content-secondary text-md pb-2">
    {subtitle}
  </p>
  <slot />
</li>
