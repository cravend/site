---
import { t } from "astro-i18n";

const QUICK_LINKS = [
  { href: "https://github.com/cravend", label: t("header.nav.github") },
  { href: "#contact", label: t("header.nav.contact") },
] as const;
---

<div>
  <div
    class="flex max-w-fit overflow-hidden bg-white border divide-x rounded-lg rtl:flex-row-reverse dark:bg-gray-900 dark:border-gray-700 dark:divide-gray-700"
  >
    {
      QUICK_LINKS.map(({ href, label }) => (
        <a
          href={href}
          class="px-4 py-2 text-sm font-medium text-gray-600 transition-colors duration-200 sm:text-base sm:px-6 dark:hover:bg-gray-800 dark:text-gray-300 hover:bg-gray-100"
        >
          {label}
        </a>
      ))
    }
  </div>
</div>
