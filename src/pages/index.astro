        <button
          id="toggleTheme"
          class="hover:decoration-primary focus:decoration-primary cursor-pointer p-2 underline underline-offset-2"
        >
          Set color to green
        </button>
      </p>
      <script>
        const themeToggleButton = document.querySelector("#toggleTheme");

        const THEMES = {
          green: {
            "--color-primary": "var(--color-lime-700)",
            "--color-accent": "var(--color-lime-50)",
          },
          blue: {
            "--color-primary": "var(--color-cyan-700)",
            "--color-accent": "var(--color-cyan-50)",
          },
          purple: {
            "--color-primary": "var(--color-purple-700)",
            "--color-accent": "var(--color-purple-50)",
          },
          orange: {
            "--color-primary": "var(--color-orange-700)",
            "--color-accent": "var(--color-orange-50)",
          },
          "arc theme": {
            "--color-primary": "var(--arc-palette-foregroundPrimary)",
            "--color-accent": "var(--arc-palette-background)",
          },
        } as const;

        type Theme = keyof typeof THEMES;

        if (themeToggleButton) {
          let currentTheme: Theme = "orange";

          const NEXT_THEME: Record<Theme, Theme> = {
            orange: "purple",
            "arc theme": "purple",
            purple: "blue",
            blue: "green",
            green: "orange",
          };

          setTimeout(function () {
            const isArc = !!getComputedStyle(
              document.documentElement,
            ).getPropertyValue("--arc-palette-background");
            if (isArc) {
              NEXT_THEME.orange = "arc theme";
            }

            themeToggleButton.textContent = `Set color to ${NEXT_THEME[currentTheme]}`;
          }, 1000);

          themeToggleButton.addEventListener("click", () => {
            currentTheme = NEXT_THEME[currentTheme];

            Object.entries(THEMES[currentTheme]).forEach(([key, value]) => {
              document.documentElement.style.setProperty(key, value);
            });

            themeToggleButton.textContent = `Set color to ${NEXT_THEME[currentTheme]}`;
          });
        }
      </script>
    </footer>
  </body>
</html>
