---
import { astroI18n, t } from "astro-i18n";
import { Image } from "@astrojs/image/components";
import dkmsScreenshot from "../images/projects/dkms.png";
import wordificationScreenshot from "../images/projects/wordification.png";

import HeroLayout from "../layouts/HeroLayout.astro";

astroI18n.init(Astro);
---

<HeroLayout title="Dalton Craven | Home">
  <section id="about">
    <h2>{t("sections.about.header")}</h2>
    <p set:html={t("sections.about.content")} />
  </section>

  <section id="journey">
    <h2>{t("sections.journey.header")}</h2>
    <p set:html={t("sections.journey.content1")} />
    <p set:html={t("sections.journey.content2")} />
    <p set:html={t("sections.journey.content3")} />
  </section>

  <section id="projects">
    <h2>{t("sections.projects.header")}</h2>
    <div>
      <h3>{t("sections.projects.wordification.title")}</h3>
      <Image
        src={wordificationScreenshot}
        height={512}
        alt={t("sections.projects.wordification.alt")}
      />
      <p set:html={t("sections.projects.wordification.description")} />
    </div>
    <div>
      <h3>{t("sections.projects.dkms.title")}</h3>
      <Image
        src={dkmsScreenshot}
        height={512}
        alt={t("sections.projects.dkms.alt")}
      />
      <p set:html={t("sections.projects.dkms.description")} />
    </div>
  </section>

  <section id="skills">
    <h2>{t("sections.skills.header")}</h2>
    <ul>
      <li set:html={t("sections.skills.spokenLanguages")} />
      <li set:html={t("sections.skills.techLanguages")} />
      <li set:html={t("sections.skills.frameworks")} />
      <li set:html={t("sections.skills.certifications")} />
    </ul>
  </section>

  <section id="contact">
    <h2>{t("sections.contact.header")}</h2>
    <ul>
      <li set:html={t("sections.contact.americanPhone")} />
      <li set:html={t("sections.contact.email")} />
      <li set:html={t("sections.contact.github")} />
      <li set:html={t("sections.contact.gitlab")} />
      <li set:html={t("sections.contact.linkedin")} />
      <li set:html={t("sections.contact.gpg")} />
    </ul>
  </section>
</HeroLayout>
